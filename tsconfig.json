{
  "extends": "@react-native/typescript-config/tsconfig.json",
  "compilerOptions": {
    "declaration": true, // Xuất file .d.ts
    "emitDeclarationOnly": false, // Chỉ xuất file .d.ts
    "declarationDir": "./lib", // Thư mục chứa file .d.ts
    "esModuleInterop": true,
    "skipLibCheck": true
  },
  "include": ["packages/**/*"],
  "exclude": ["node_modules", "lib", "**/__tests__"]
}
